{# GestionASM17/templates/GestionASM17/detailMembre.html/twig#}

{% extends 'base.html.twig' %}
{% block title %}{{parent()}}-Détail Dépense{% endblock %}
{% block body %}
<div>
  <div class="container-fluid">
    <!-- <br> -->
    <div class="form-row">  
        <div class="btn-group">
           <a class="btn btn-dark" href="{{path('depenses')}}" role="button">Liste des Dépenses</a>
        </div>
    </div>
    <div class="row">
      <table class="table table-borderless col-md-6">
        <tbody>
          <tr>
            <td style="padding-top:16px;text-align:center;">
              <h3>Détail d'une Dépense</h3>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <hr>
  </div>
</div>
  <div class="container-fluid">   
      <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                {% if depense.rapprochee %}
                    <button type="button" class="btn-lg btn-success btn-block">
                        Rapprochée
                        <span class="badge badge-light">Relevé {{depense.numReleveBancaireDepense}}</span>
                    </button>
                  {% else %}
                    <button type="button" class="btn-lg btn-warning btn-block">
                        Non Rapprochée
                    </button>
                  {% endif %}
            </div>    
        </div>
        <div class="form-row">
            <div class="form-group col-md-1">
              <label for="ExerciceComptable"><h5>Exercice :</h5></label>
              <input type="text" class="form-control" id="ExerciceComptable" placeholder="{{depense.anneeDepense}}" disabled>
            </div>
            <div class="form-group col-md-1 ">
              <label for="DateDepense"><h5>Date :</h5></label>
              <input type="text" class="form-control" id="DateDepense" placeholder="{{depense.dateDepense|date("d.m.y")}}" disabled>
            </div>
            <div class="form-group col-md-1 ">
              <label for="MontantDepense"><h5>Montant :</h5></label>
              <input type="text" class="form-control" id="MontantDepense" placeholder="{{depense.montantDepense}} Euro(s)" disabled>
            </div>
            <div class="form-group col-md-3 ">
                <label for="Facture"><h5>Facture :</h5></label>
                <input type="text" class="form-control" id="Facture" placeholder="{{depense.numFacture}}" disabled>
            </div>
        </div>

        <div class="form-row">   
            <div class="form-group col-md-6 ">
                <label for="Debiteur"><h5>Débiteur :</h5></label>
                <input type="text" class="form-control" id="Debiteur" placeholder="{{depense.debiteur}}" disabled>
            </div>
        </div>           
        
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="DescriptionDepense"><h5>Description :</h5></label>
                <input type="text" class="form-control" id="DescriptionDepense" placeholder="{{depense.description}}" disabled >
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
              <label for="ModePaiementDepense"><h5>Payée par :</h5></label>
              <input type="text" class="form-control" id="ModePaiementDepense" placeholder="{{depense.modePaiementDepense.modeDePaiement}}" disabled >
            </div>
            <div class="form-group col-md-2 ">
              <label for="PosteAnalytiqueDepense"><h5>Poste Analytique :</h5></label>
              <input type="text" class="form-control" id="PosteAnalytiqueDepense" placeholder="{{depense.posteAnalytique.posteAnalytique}}" disabled>
            </div>
            <div class="form-group col-md-2 ">
              <label for="DepenseTireeSur"><h5>Tirée sur :</h5></label>
              <input type="text" class="form-control" id="DepenseTireeSur" placeholder="{{depense.CompteDebite.CompteDebite}}" disabled>
            </div>
        </div>

        <div class="form-row">  
           <div class="form-group col-md-3">
            <label for="NumTitrePaiement"><h5>Numéro Titre de Paiement :</h5></label>
            <input type="text" class="form-control" id="NumTitrePaiement" placeholder="{{depense.numTitrePaiementDepense}}" disabled>
          </div>            
          <div class="form-group col-md-3">
            <label for="NumReleveBancaireDepense"><h5>Numéro de Relevé de Compte :</h5></label>
            <input type="text" class="form-control" id="NumReleveBancaireDepense" placeholder="{{depense.numReleveBancaireDepense}}" disabled>
          </div>
        </div>
        <div>

        <div class="form-row">  
            <div class="btn-group">
              <button type="button" class="btn btn-danger" disabled>Modifier</button>
            </div>
        </div>
      </form>
    </div>              
{% endblock %}

