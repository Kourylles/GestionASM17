{# GestionASM17/templates/GestionASM17/detailRecette.html/twig#}

{% extends 'base.html.twig' %}
{% block title %}{{parent()}}-Détail Recette{% endblock %}
{% block body %}
<div>
  <div class="container-fluid">
    <!-- <br> -->
    <div class="form-row">  
        <div class="btn-group">
           <a class="btn btn-dark" href="{{path('depenses')}}" role="button">Liste des Recettes</a>
        </div>
    </div>
    <div class="row">
      <table class="table table-borderless col-md-6">
        <tbody>
          <tr>
            <td style="padding-top:16px;text-align:center;">
              <h3>Détail d'une Recette</h3>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <hr>
  </div>
</div>
  <div class="container-fluid">   
      <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                {% if recette.etat_rapprochement_recette %}
                    <button type="button" class="btn-lg btn-success btn-block">
                        Rapprochée
                        <span class="badge badge-light">Relevé {{recette.num_releve_compte_recette}}</span>
                    </button>
                  {% else %}
                    <button type="button" class="btn-lg btn-warning btn-block">
                        Non Rapprochée
                    </button>
                  {% endif %}
            </div>    
        </div>
        <div class="form-row">
            <div class="form-group col-md-1">
              <label for="ExerciceComptable"><h5>Exercice :</h5></label>
              <input type="text" class="form-control" id="ExerciceComptable" placeholder="{{recette.anneeDepense}}" disabled>
            </div>
            <div class="form-group col-md-1 ">
              <label for="DateRecette"><h5>Date :</h5></label>
              <input type="text" class="form-control" id="DateRecette" placeholder="{{recette.date_paiement_recette|date("d.m.y")}}" disabled>
            </div>
            <div class="form-group col-md-1 ">
              <label for="MontantRecette"><h5>Montant :</h5></label>
              <input type="text" class="form-control" id="MontantRecette" placeholder="{{recette.montant_recette}} Euro(s)" disabled>
            </div>
            <div class="form-group col-md-3 ">
                <label for="Facture"><h5>Facture :</h5></label>
                <input type="text" class="form-control" id="Facture" placeholder="{{recette_num_titre_paiement_recette}}" disabled>
            </div>
        </div>

        <div class="form-row">   
            <div class="form-group col-md-6 ">
                <label for="Debiteur"><h5>Type de Recette :</h5></label>
                <input type="text" class="form-control" id="Debiteur" placeholder="{{recette.type_recette}}" disabled>
            </div>
        </div>           
        
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="DescriptionRecette"><h5>Description :</h5></label>
                <input type="text" class="form-control" id="DescriptionRecette" placeholder="{{recette.description_recette}}" disabled >
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
              <label for="ModePaiementRecette"><h5>Payée par :</h5></label>
              <input type="text" class="form-control" id="ModePaiementRecette" placeholder="{{recette.mode_paiement.modeDePaiement}}" disabled >
            </div>
            <div class="form-group col-md-2 ">
              <label for="PosteAnalytiqueRecette"><h5>Poste Analytique :</h5></label>
              <input type="text" class="form-control" id="PosteAnalytiqueRecette" placeholder="{{recette.posteAnalytique.posteAnalytique}}" disabled>
            </div>
            <div class="form-group col-md-2 ">
              <label for="RecetteTireeSur"><h5>Tirée sur :</h5></label>
              <input type="text" class="form-control" id="RecetteTireeSur" placeholder="{{recette.CompteDebite.CompteDebite}}" disabled>
            </div>
        </div>

        <div class="form-row">  
           <div class="form-group col-md-3">
            <label for="NumTitrePaiement"><h5>Numéro Titre de Paiement :</h5></label>
            <input type="text" class="form-control" id="NumTitrePaiement" placeholder="{{recette.num_titre_paiement_recette}}" disabled>
          </div>            
          <div class="form-group col-md-3">
            <label for="NumReleveBancaireRecette"><h5>Numéro de Relevé de Compte :</h5></label>
            <input type="text" class="form-control" id="NumReleveBancaireRecette" placeholder="{{recette.num_releve_compte_recette}}" disabled>
          </div>
        </div>
        <div>

        <div class="form-row">  
            <div class="btn-group">
              <button type="button" class="btn btn-danger" disabled>Modifier</button>
            </div>
        </div>
      </form>
    </div>              
{% endblock %}

